{
  "Urls":{
    "Api":"http://localhost:6562/api/v1/Spectrograph/0/",
    "Web":"http://localhost:6562"
  },
  
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://*:6562"
      }
    }
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      { 
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%localappdata%/Shelyak/Uvex/Logs/Shelyak-Uvex-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 30,
                "rollOnFileSizeLimit": true, 
                "fileSizeLimitBytes": 10485760
              }
            }
          ]
        }
      }
    ]
  },
  
  "AllowedHosts": "*"
}
