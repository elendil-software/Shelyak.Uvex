@inherits UvexComponentBase
@rendermode InteractiveServer
@inject IStringLocalizer<LocalizationResources> Loc;
@inject IOptionsSnapshot<SerialPortSettings> SerialPortSettingsOptions;

<Card Class="h-100">
    <CardBody>
        <CardTitle>@Loc["UvexControl_Informations_CardTitle"]</CardTitle>
        <dl class="row">
            <dt class="col-12 col-lg-6">@Loc["UvexControl_Informations_Label_Spectrograph name"]</dt>
            <dd class="col-12 col-lg-6">@SpectrographName</dd>
            <dt class="col-12 col-lg-6">@Loc["UvexControl_Informations_Label_Firmware"]</dt>
            <dd class="col-12 col-lg-6">@Firmware</dd>
            <dt class="col-12 col-lg-6">@Loc["UvexControl_Informations_Label_Protocol version"]</dt>
            <dd class="col-12 col-lg-6">@UsisProtocolVersion</dd>
            <dt class="col-12 col-lg-6">@Loc["UvexControl_Informations_Label_COM port"]</dt>
            <dd class="col-12 col-lg-6">@ComPort</dd>
        </dl>
    </CardBody>
</Card>

@code
{
    private string SpectrographName { get; set; } = null!;
    private string Firmware { get; set; } = null!;
    private string UsisProtocolVersion { get; set; } = null!;
    private string ComPort { get; set; } = null!;
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    protected override async Task LoadData()
    {
        var response = await AlpacaCommands.GetDeviceName();
        HandleAlpacaError(response.Value);
        SpectrographName = response.Value.Value.Value;

        var softwareVersion = await AlpacaCommands.GetSoftwareVersion();
        HandleAlpacaError(softwareVersion.Value);
        Firmware = softwareVersion.Value.Value.Value;

        var protocolVersion = await AlpacaCommands.GetProtocolVersion();
        HandleAlpacaError(protocolVersion.Value);
        UsisProtocolVersion = protocolVersion.Value.Value.Value;

        ComPort = SerialPortSettingsOptions.Value.PortName;
    }
}