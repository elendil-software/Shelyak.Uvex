@page "/Configuration"
@rendermode InteractiveServer

<PageTitle>Configuration</PageTitle>
<h3>Configuration</h3>


@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-@MessageType alert-dismissible" role="alert">
        <div>@Message</div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<EditForm Model="@Model" FormName="EditParameters" OnValidSubmit="SubmitForm">
    <DataAnnotationsValidator/>

    <div class="row mb-4">
        <label asp-for="@Model.ComPorts" class="col-sm-2 col-form-label">COM Port List</label>
        <div class="col-sm-4">
            <InputSelect @bind-Value="@Model.SelectedComPort" class="form-select">
                <option value=""></option>
                @foreach (var port in Model.ComPorts)
                {
                    <option value="@port">@port</option>
                }
            </InputSelect>
            <ValidationMessage class="invalid-feedback" For="@(() => Model.SelectedComPort)"></ValidationMessage>
        </div>
    </div>
    
    <button class="btn btn-primary">Enregistrer</button>
</EditForm>