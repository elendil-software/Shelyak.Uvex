@page
@model Shelyak.Uvex.Web.Pages.Configuration
@{
    ViewData["Title"] = "Configuration";
}

@if(!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-@Model.MessageType alert-dismissible" role="alert">
        <div>@Model.Message</div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label asp-for="SelectedComPort" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="SelectedComPort" asp-items="Model.ComPorts" class="form-select"></select>
        </div>
    </div>
    
    <button class="btn btn-primary">Enregistrer</button>
</form>